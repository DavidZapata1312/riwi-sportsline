{
  "compilerOptions": {
    /* ... Otras opciones de la ConfiguraciÃ³n 2 ... */
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",

    // ðŸ‘‡ AJUSTES PARA RUTAS ABSOLUTAS
    "baseUrl": "./", // Define la raÃ­z como la carpeta del tsconfig.json
    "paths": {
      "src/*": ["src/*"] // Mapea cualquier importaciÃ³n que empiece por 'src/' a la carpeta 'src' real.
    },
    // ðŸ‘† FIN AJUSTES PARA RUTAS ABSOLUTAS

    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
  },
  
  // ðŸ’¡ RecomendaciÃ³n: AÃ±adir 'include' si falta para que el compilador sepa quÃ© archivos procesar
  "include": ["src/**/*.ts", "test/**/*.ts", "jest.config.ts"]
}
